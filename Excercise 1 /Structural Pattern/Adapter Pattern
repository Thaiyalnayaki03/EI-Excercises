// Facade Pattern: NEET Study Plan Management

// Subsystem for Study Schedule Management
class StudySchedule {
    public void createSchedule() {
        System.out.println("Creating study schedule.");
    }
    
    public void updateSchedule() {
        System.out.println("Updating study schedule.");
    }
}

// Subsystem for Practice Test Management
class PracticeTests {
    public void addTest() {
        System.out.println("Adding practice test.");
    }
    
    public void reviewResults() {
        System.out.println("Reviewing practice test results.");
    }
}

// Subsystem for Progress Tracking
class ProgressTracker {
    public void logProgress() {
        System.out.println("Logging progress.");
    }
    
    public void generateReport() {
        System.out.println("Generating progress report.");
    }
}

// Facade Class
class NEETFacade {
    private StudySchedule studySchedule;
    private PracticeTests practiceTests;
    private ProgressTracker progressTracker;

    public NEETFacade() {
        studySchedule = new StudySchedule();
        practiceTests = new PracticeTests();
        progressTracker = new ProgressTracker();
    }

    // Simplified methods for clients
    public void prepareStudyPlan() {
        studySchedule.createSchedule();
        practiceTests.addTest();
        progressTracker.logProgress();
        System.out.println("NEET study plan prepared.");
    }

    public void reviewStudyProgress() {
        practiceTests.reviewResults();
        progressTracker.generateReport();
        System.out.println("NEET study progress reviewed.");
    }
}

// Client Code
public class Main {
    public static void main(String[] args) {
        NEETFacade neetFacade = new NEETFacade();

        // Use the simplified interface provided by the facade
        neetFacade.prepareStudyPlan();
        System.out.println();
        neetFacade.reviewStudyProgress();
    }
}
